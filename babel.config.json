{
    "presets": ["@babel/preset-react"],
    "env": {
        "commonjs": {
            "plugins": ["add-module-exports"],
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "corejs": 3,
                        "useBuiltIns": "usage",
                        "modules": "commonjs"
                    }
                ],
                "@babel/typescript"
            ]
        },
        "es": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "corejs": 3,
                        "useBuiltIns": "usage",
                        "modules": false
                    }
                ],
                "@babel/typescript"
            ]
        }
    }
}
